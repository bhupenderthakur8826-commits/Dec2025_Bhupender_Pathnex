# SERVICE AND TAGS USING TERRAFOME 
# ANSIBLE PLYBOOK IN YAML INSTALL NGINX ON SERVERS 

name: install nginx on ec2 server
hosts: all
become: yes
 tasks:
    - name: Install nginx
      yum:
        name: nginx
        state: present
name: enable nginx
services:
name: nginx
state: started
enable: yes


